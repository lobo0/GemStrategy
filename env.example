# GemStrategy Environment Configuration
# Copy this file to .env and modify the values as needed

# Environment
ENVIRONMENT=development  # development, testing, production

# API Configuration
API_TITLE=GemStrategy API
API_DESCRIPTION=Investment recommendation tool implementing Global Equities Momentum (GEM) strategy
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/gemstrategy.log
LOG_MAX_BYTES=10485760  # 10MB in bytes
LOG_BACKUP_COUNT=5

# Data Configuration
CACHE_TTL_HOURS=4
MAX_RETRIES=3
TIMEOUT_SECONDS=30
USER_AGENT=GemStrategy/1.0

# Database Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gemstrategy
DB_USER=postgres
DB_PASSWORD=
DATABASE_URL=postgresql://user:password@localhost:5432/gemstrategy

# Redis Configuration (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Security Configuration (for future use)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
